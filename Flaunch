// pages/api/flaunch.js
import fetch from 'node-fetch';

export default async function handler(req, res) {
  try {
    const BASE = process.env.FLAUNCH_API_BASE;
    const resp = await fetch(`${BASE}/aggregator/tokens`);
    if (!resp.ok) return res.status(502).json({ error: 'Flaunch API error' });
    const { data } = await resp.json();
    const tokens = data.map(t => ({
      name: t.name,
      symbol: t.symbol,
      address: t.address,
      launch_date: t.launchpad_launch_date
    }));
    res.status(200).json({ tokens });
  } catch (error) {
    res.status(500).json({ error: error.message });
  }
}
