// pages/api/bankr.js
import fetch from 'node-fetch';

export default async function handler(_, res) {
  try {
    const BASE = process.env.BANKR_API;
    const resp = await fetch(`${BASE}/launches`);
    if (!resp.ok) return res.status(502).json({ error: 'Bankr API error' });
    const { launches } = await resp.json();
    const tokens = launches.map(l => ({
      name: l.name,
      symbol: l.symbol,
      address: l.contract_address,
      status: l.status
    }));
    res.status(200).json({ tokens });
  } catch (error) {
    res.status(500).json({ error: error.message });
  }
}
